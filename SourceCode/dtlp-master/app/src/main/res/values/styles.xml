    <style name="TextAppearence.TextInputLayout.Blue" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/blue</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextAppearence.TextInputLayout.Red" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/blue1</item>
