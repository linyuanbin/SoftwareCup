<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#dadee7">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@android:color/holo_red_light">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我的资料"
            android:layout_centerInParent="true"
            android:textColor="#ffffff"
            android:textSize="20sp"
            />

    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="20px"
            android:background="#dadee7" />

    <LinearLayout
        android:clickable="true"
        android:onClick="doClick"
        android:id="@+id/nickName"
        android:background="@drawable/linearlayout_selector"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">
    <TextView
        android:textColor="#d2000000"
        android:layout_gravity="center"
        android:gravity="left"
        android:layout_weight="1"
        android:layout_marginLeft="10dp"
        android:textSize="20dp"
        android:text="昵称"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
        <TextView
            android:textColor="#d2000000"
            android:id="@+id/nickName_"
            android:layout_weight="1"
            android:gravity="right"
            android:layout_gravity="center"
            android:textSize="17dp"
            android:text="Amour"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#173070" />

        <LinearLayout
            android:clickable="true"
            android:onClick="doClick"
            android:id="@+id/sex"
            android:background="@drawable/linearlayout_selector"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">
            <TextView
                android:textColor="#d2000000"
                android:layout_gravity="center"
                android:gravity="left"
                android:layout_weight="1"
                android:layout_marginLeft="10dp"
                android:textSize="20dp"
                android:text="性别"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:textColor="#d2000000"
                android:id="@+id/sex_"
                android:layout_weight="1"
                android:gravity="right"
                android:layout_gravity="center"
                android:textSize="17dp"
                android:text="男"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#173070" />
        <LinearLayout
            android:onClick="doClick"
            android:id="@+id/birthday"
            android:background="@drawable/linearlayout_selector"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">
            <TextView
                android:textColor="#d2000000"
                android:layout_gravity="center"
                android:gravity="left"
                android:layout_weight="1"
                android:layout_marginLeft="10dp"
                android:textSize="20dp"
                android:text="生日"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:textColor="#d2000000"
                android:id="@+id/birthday_"
                android:layout_weight="1"
                android:gravity="right"
                android:layout_gravity="center"
                android:textSize="17dp"
                android:text="1997-5-19"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#173070" />
        <LinearLayout
            android:onClick="doClick"
            android:id="@+id/major"
            android:background="@drawable/linearlayout_selector"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">
            <TextView
                android:textColor="#d2000000"
                android:layout_gravity="center"
                android:gravity="left"
                android:layout_weight="1"
                android:layout_marginLeft="10dp"
                android:textSize="20dp"
                android:text="职业"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:textColor="#d2000000"
                android:id="@+id/major_"
                android:layout_weight="1"
                android:gravity="right"
                android:layout_gravity="center"
                android:textSize="17dp"
                android:text="学生"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#173070" />
        <LinearLayout
            android:onClick="doClick"
            android:id="@+id/where"
            android:background="@drawable/linearlayout_selector"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">
            <TextView
                android:textColor="#d2000000"
                android:layout_gravity="center"
                android:gravity="left"
                android:layout_weight="1"
                android:layout_marginLeft="10dp"
                android:textSize="20dp"
                android:text="所在地"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:textColor="#d2000000"
                android:id="@+id/where_"
                android:layout_weight="1"
                android:gravity="right"
                android:layout_gravity="center"
                android:textSize="17dp"
                android:text="重庆"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#173070" />
        <LinearLayout
            android:onClick="doClick"
            android:id="@+id/email"
            android:background="@drawable/linearlayout_selector"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">
            <TextView
                android:textColor="#d2000000"
                android:layout_gravity="center"
                android:gravity="left"
                android:layout_weight="1"
                android:layout_marginLeft="10dp"
                android:textSize="20dp"
                android:text="邮箱"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:textColor="#d2000000"
                android:id="@+id/email_"
                android:layout_weight="1"
                android:gravity="right"
                android:layout_gravity="center"
                android:textSize="17dp"
                android:text="82697640@qq.com"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#173070" />
        <LinearLayout
            android:onClick="doClick"
            android:id="@+id/number"
            android:background="@drawable/linearlayout_selector"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">
            <TextView
                android:layout_gravity="center"
                android:gravity="left"
                android:layout_weight="1"
                android:layout_marginLeft="10dp"
                android:textSize="20dp"
                android:text="电话"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#d2000000"/>
            <TextView
                android:textColor="#d2000000"
                android:id="@+id/number_"
                android:layout_weight="1"
                android:gravity="right"
                android:layout_gravity="center"
                android:textSize="17dp"
                android:text="13944677348"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>





    </LinearLayout>

</LinearLayout>
